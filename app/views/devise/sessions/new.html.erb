<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin"}) do |f| %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <h2 class="form-signin-header">Sign In</h2>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, id: 'inputEmail', class: 'form-control', placeholder: 'Email address', required: true %>
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, autocomplete: "off", id: 'inputPassword', class: 'form-control', placeholder: 'Password', required: true %>

    <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    <% end -%>

    <div class="actions">
      <%= f.submit "Sign In", class: "btn btn-lg btn-primary btn-block" %>
    </div>

    <%= render "devise/shared/links" %>
<% end %>
